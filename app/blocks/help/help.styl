.help
    padding w(120) 0

    &__title
        padding-bottom w(15)
        font-family $ff-Arsenal
        font-weight 700
        font-size w(48)
        line-height w(68)
        color $c-black
        text-align center
        text-transform uppercase
        border-bottom w(4) solid $c-yellow

    &__line
        width w(163)
        height w(4)
        background $c-yellow
        margin 0 auto

    &__wrap
        padding-top w(60)
        display flex
        flex-direction row
        justify-content space-between

    &__counter
        width w(56)
        padding w(12) w(15)
        font-family $ff-Arsenal
        font-weight 700
        font-size w(26)
        line-height w(33)
        color $c-black
        background $c-yellow
        border-radius w(53)

    &__block__title
        padding w(25) 0 w(15)
        font-family $ff-Arsenal
        font-weight 700
        font-size w(18)
        line-height w(23)
        color $c-black

    &__block__text
        font-family $ff-Arsenal
        font-weight 400
        font-size w(14)
        line-height w(18)
        color $c-black

    &__subtitle
        padding-top w(40)
        font-family $ff-Arsenal
        font-weight 700
        font-size w(26)
        line-height w(33)
        color $c-black
        text-align center